---
export interface Props {
  title?: string;
}

const {title} = Astro.props as Props;

import Header from '../components/Header.astro';
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>dbgmode{title ? `/${title}` : ''}</title>
    <style is:global>
      @import '../root.css';

      * {
        box-sizing: border-box;
        border-width: 0;
      }

      html {
        line-height: 1.5;
        -webkit-text-size-adjust: 100%;
        -moz-tab-size: 4;
        tab-size: 4;
        font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
          'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif,
          'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
          'Noto Color Emoji';
      }

      body {
        margin: 0;
        line-height: inherit;
      }
    </style>

    <style>
      body {
        background: rgb(41 37 36);

        --r: rgba(255, 0, 0, 0.071);
        --r2: rgba(255, 000, 000, 0.08);
        --g: rgba(034, 197, 094, 0.08);
        --g2: rgba(034, 197, 094, 0.07);
        --b: rgba(000, 194, 255, 0.04);
        --b2: rgba(000, 194, 255, 0.1);

        background-image: repeating-linear-gradient(
            90deg,
            transparent 0 2--bgl,
            var(--b) 2--bgl 3--bgl,
            var(--g) 4--bgl 5--bgl,
            transparent 5--bgl 6--bgl,
            var(--r) 7--bgl 8--bgl,
            transparent 8--bgl 100%
          ),
          repeating-linear-gradient(
            180deg,
            transparent 0 1--bgl,
            var(--r2) 2--bgl 3--bgl,
            var(--g2) 3--bgl 4--bgl,
            var(--b2) 5--bgl 6--bgl,
            transparent 6.5--bgl 100%
          );

        background-size: 1--bgsq 1--bgsq;
      }
    </style>
  </head>

  <body>
    <Header slug={title} />
    <slot />
  </body>
</html>
