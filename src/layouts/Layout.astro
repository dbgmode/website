---
export interface Props {
  title?: string;
}

const {title} = Astro.props as Props;

import Header from '../components/Header.astro';
import '../root.css';
import '../colors.css?raw';
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>dbgmode{title ? `/${title}` : ''}</title>
    <style is:global>
      @import '../root.css';

      * {
        box-sizing: border-box;

        border-width: 0;
      }

      html {
        font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
          'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif,
          'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol',
          'Noto Color Emoji';
        line-height: 1.5;
        text-size-adjust: 100%;
        tab-size: 4;
      }

      body {
        margin: 0;

        line-height: inherit;
      }

      hr {
        box-sizing: content-box;
        height: 2.5--bgl;
        margin: 0;

        border: 0;
      }
    </style>

    <style>
      body {

        $r: rgb(255 0 0 / 7.1%);
        $r2: rgb(255 000 000 / 8%);
        $g: rgb(034 197 094 / 8%);
        $g2: rgb(034 197 094 / 7%);
        $b: rgb(000 194 255 / 4%);
        $b2: rgb(000 194 255 / 10%);

        background: rgb(41 37 36);
        background-image: repeating-linear-gradient(
            90deg,
            transparent 0 2--bgl,
            $b 2--bgl 3--bgl,
            $g 4--bgl 5--bgl,
            transparent 5--bgl 6--bgl,
            $r 7--bgl 8--bgl,
            transparent 8--bgl 100%
          ),
          repeating-linear-gradient(
            180deg,
            transparent 0 1--bgl,
            $r2 2--bgl 3--bgl,
            $g2 3--bgl 4--bgl,
            $b2 5--bgl 6--bgl,
            transparent 6.5--bgl 100%
          );
        background-size: 1--bgsq 1--bgsq;
      }
    </style>
  </head>

  <body>
    <Header slug={title} />
    <slot />
  </body>
</html>
