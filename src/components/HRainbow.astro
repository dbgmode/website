---
export interface Props {}
const {} = Astro.props as Props;
---

<hr class='ainbow' />

<style is:global>
  @import '../colors.scss';

  hr {
    margin: 0;
  }

  hr.ainbow {
    height: 2--bgl;
    border-top: none;

    $slash-point: calc(var(--logo-width) + 9 * var(--logomark-ex));
    $post-slash-step: calc((100vw - $slash-point) / 9);

    background: linear-gradient(
      77deg,
      #a14bc3 0,
      $fuchsia 1--bgsq,
      $red 1.5--bgsq,
      $orange 2.5--bgsq,
      $yellow 3.75--bgsq,
      $green 5--bgsq,
      $aqua 6--bgsq,
      $blue 6.75--bgsq,
      #a14bc3 7.75--bgsq,
      $pink $slash-point,
      $purple calc($slash-point + 0.5 * $post-slash-step),
      $blue calc($slash-point + 3 * $post-slash-step),
      $aqua calc($slash-point + 4.1 * $post-slash-step),
      $green calc($slash-point + 5 * $post-slash-step),
      $yellow calc($slash-point + 6 * $post-slash-step),
      $orange calc($slash-point + 7 * $post-slash-step),
      $red calc($slash-point + 8.5 * $post-slash-step),
      $fuchsia calc($slash-point + 9 * $post-slash-step)
    );
  }
</style>
