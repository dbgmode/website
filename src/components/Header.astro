---
export interface Props {
  slug?: string;
}
const {slug} = Astro.props as Props;

import LogoMark from './Header/LogoMark.astro';
import NavButton from './Header/NavButton.astro';
---

<>
  <header>
    <img src='images/logo.svg' id='logo' />
    <LogoMark slug={slug} />
    <NavButton onclick={'document.getElementById("menu").hidden = false'} />
  </header>
  <hr />
</>

<style>
  @mixin hrainbow 1--bgsq, 6.3 * 2.25rem, 100vw;  $logo-width: 2.1--bgsq;

  header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-items: start;

    box-sizing: content-box;
    height: calc(2--bgsq + 1--bgl);

    font-size: calc(var(--logomark-rem) * 1rem);
    line-height: 1;
  }

  #logo {
    width: $logo-width;
    margin-right: 0.25rem;

    filter: drop-shadow(1.5px 0 2px rgb(251 39 12 / 72%))
      drop-shadow(0.5px -0.3px 0.25px rgb(254 178 22 / 69%))
      drop-shadow(
        -0.25--bgsq calc(0.25--bgsq + 1--bgl) 0.25--bgsq rgb(254 8 19 / 41%)
      )
      drop-shadow(
        -0.625--bgsq calc(0.25--bgsq - 0.5--bgl) 0.125--bgsq rgb(255 37 184 / 28%)
      );

    rotate: -8deg;
  }

  .slug {
    color: #fff;
    white-space: nowrap;
  }
</style>
