---
export interface Props {
  slug?: string;
}
const {slug} = Astro.props as Props;

import LogoMark from './Header/LogoMark.astro';
import NavButton from './Header/NavButton.astro';
---

<>
  <header>
    <img src='images/logo.svg' id='logo' />
    <LogoMark slug={slug} />
    <NavButton onclick={'document.body.classList.add("menu-open")'} />
  </header>
</>

<style>
  $font-size: 2.25rem;
  $logo-width: 2.1--bgsq;

  header {
    @mixin hrainbow 1--bgsq, 6.8 * $font-size, 100vw, border;

    position: sticky;
    top: 0;

    display: flex;
    flex-direction: row;
    align-items: center;
    justify-items: start;

    height: calc(2--bgsq + 3--bgl);

    font-size: $font-size;
    line-height: 1;

    background-color: inherit;
    background-image: inherit;
    background-size: inherit;
    border-style: solid;
    border-bottom-width: 3--bgl;
    border-image-slice: 100% 0%;
    border-image-outset: 0 0 2--bgl 0;
  }

  #logo {
    width: $logo-width;
    margin-right: 0.25rem;

    filter: drop-shadow(1.5px 0 2px rgb(251 39 12 / 72%))
      drop-shadow(0.5px -0.3px 0.25px rgb(254 178 22 / 69%))
      drop-shadow(
        -0.25--bgsq calc(0.25--bgsq + 1--bgl) 0.25--bgsq rgb(254 8 19 / 41%)
      )
      drop-shadow(
        -0.625--bgsq calc(0.25--bgsq - 0.5--bgl) 0.125--bgsq rgb(255 37 184 /
              28%)
      );

    rotate: -8deg;
  }

  .slug {
    color: #fff;
    white-space: nowrap;
  }
</style>
